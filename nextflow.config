nextflow.enable.dsl=2

// DEFAULT PARAMETERS 
params {
    pipeline_version      = "1.0.0a"
    run_id                = 18
    genome                = "/data/db/reference"
    reads                 = "$baseDir/inputs/reads"
    make_index            = false
    make_fai              = true
    make_ref_dict         = true
    make_annot_dict       = true
    reference_version     = 38
    index                 = "/data/db/reference/GRCh${params.reference_version}"
    bed_bait              = "/data/db/bed/neuro-oncov2_capture_targets.bed"
    bed_exon              = "/data/db/bed/neuro-oncov2_primary_targets.bed"
    bed_hotspots          = "/data/db/bed/BrainCap_primary_targets.bed"
    picard                = "$baseDir/tools/picard.jar"
    gatk                  = "$baseDir/tools/gatk-package-4.2.6.1-local.jar"
    dbsnp                 = "/data/db/variation/resources_broad_hg38_v0_Homo_sapiens_assembly38.dbsnp138.vcf"
    exon_template         = "/data/templates/template_exon_coverage.csv"
    hotspot_template      = "/data/templates/template_hotspot_coverage.csv"
    patient_report_config = "/data/config/multiqc_config.yaml" 
    freec_config          = "/data/config/control_freec.config"
    R_freec_graphics      = "$baseDir/tools/plot_CNV.R"
    vep_config            = "/data/config/vep_config.tsv"
    vep_cache             = "/data/db/Annotation/ensembl-vep-release-106.1/cache"
    vep_plugins           = "$HOME/.vep/Plugins"
    gnomadc_vep_plugin    = "/data/Plugins/gnomad.ch.genomesv3.tabbed.tsv.gz"
    gnomadc_vep_tabix     = "/data/Plugins/gnomad.ch.genomesv3.tabbed.tsv.gz.tbi"
    cadd_vep_plugin_snv   = "/data/Plugins/gnomad.genomes.r3.0.snv.tsv.gz"
    cadd_vep_tabix_snv    = "/data/Plugins/gnomad.genomes.r3.0.snv.tsv.gz.tbi"
    cadd_vep_plugin_indel = "/data/Plugins/gnomad.genomes.r3.0.indel_inclAnno.tsv.gz"
    cadd_vep_tabix_indel  = "/data/Plugins/gnomad.genomes.r3.0.indel_inclAnno.tsv.gz.tbi"
    dbnsfp_vep_plugin     = "/data/Plugins/dbNSFP4.3a_grch38.gz"
    dbnsfp_vep_tabix      = "/data/Plugins/dbNSFP4.3a_grch38.gz.tbi"
    python_vep_process    = "$baseDir/tools/process_vcf.py"
    results               = "/data/db/results/NEUROONCO${run_id}"
    help                  = false
}


profiles {
    normal {
        executor {
            $local {
                cpus = 8
            }
        }
    }
    
    fast {
        executor {
            $local {
                cpus = 16
            }
        }
    }
}
